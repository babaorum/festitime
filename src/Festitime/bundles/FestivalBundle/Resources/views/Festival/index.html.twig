<!DOCTYPE html>
<html>
    <head>
        <title>Festitime</title>
        <script type="text/javascript" src="/assets/js/bower_components/angular/angular.js"></script>
        <script type="text/javascript" src="/assets/js/modules/festival.module.js"></script>
    </head>
    <body>
        <form action="{{ path('postFestival') }}" method="POST">
            <div>
                Cr√©er un nouveau festival :
                <br>
                Nom : <input type="text" name="festival[name]">
                <br>
                Description : <input type="text" name="festival[description]">
                <br>
                <input type="submit" name="submit" value="Envoyer">
            </div>
        </form>

            <h1>
                Trouver votre festival
            </h1>
            <div ng-app="festival">
                <div ng-controller="searchBarController">
                    <input type="search" ng-model="search" placeholder="Rechercher ...">
                    <br>
                    <input type="checkbox" ng-click="includeType('pop')">&nbsp;Pop
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    <input type="checkbox" ng-click="includeType('rock')">&nbsp;Rock
                    <ul>
                        <li ng-repeat="festival in festivals | filter:search">
                            {[{ festival.name }]}
                        </li>
                    </ul>
                </div>
        </div>

    </body>
</html>
